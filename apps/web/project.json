{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "angular-web",
  "sourceRoot": "apps/web/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "ru": {
        "translation": "apps/web/src/i18n/messages.xlf",
        "baseHref": ""
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "customWebpackConfig": {
          "path": "apps/web/webpack.config.ts"
        },
        "outputPath": "dist/apps/web/browser",
        "index": "apps/web/src/index.html",
        "main": "apps/web/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/web/tsconfig.app.json",
        "assets": [
          "apps/web/src/favicon.ico",
          "apps/web/src/sitemap.xml",
          "apps/web/src/site.webmanifest",
          "apps/web/src/browserconfig.xml",
          "apps/web/src/robots.txt",
          "apps/web/src/assets"
        ],
        "styles": ["apps/web/src/styles.scss"],
        "allowedCommonJsDependencies": ["hammerjs"],
        "scripts": [],
        "localize": ["ru"]
      },
      "configurations": {
        "production": {
          "index": {
            "input": "apps/web/src/index.prod.html",
            "output": "index.html"
          },
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "sourceMap": true
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:webpack-dev-server",
      "configurations": {
        "production": {
          "browserTarget": "web:build:production"
        },
        "development": {
          "browserTarget": "web:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "web:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/web/**/*.ts", "apps/web/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "server": {
      "executor": "@nx/angular:webpack-server",
      "options": {
        "outputPath": "dist/apps/web/server",
        "main": "apps/web/server.ts",
        "tsConfig": "apps/web/tsconfig.server.json",
        "localize": ["ru"]
      },
      "configurations": {
        "production": {
          "outputHashing": "media"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "vendorChunk": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-ssr": {
      "executor": "@nguniversal/builders:ssr-dev-server",
      "configurations": {
        "development": {
          "browserTarget": "web:build:development",
          "serverTarget": "web:server:development"
        },
        "production": {
          "browserTarget": "web:build:production",
          "serverTarget": "web:server:production"
        }
      },
      "defaultConfiguration": "development"
    },
    "prerender": {
      "executor": "@nguniversal/builders:prerender",
      "options": {
        "routes": ["/"],
        "routesFile": "apps/web/dynamic-routes.txt",
        "guessRoutes": false
      },
      "configurations": {
        "production": {
          "browserTarget": "web:build:production",
          "serverTarget": "web:server:production"
        },
        "development": {
          "browserTarget": "web:build:development",
          "serverTarget": "web:server:development"
        }
      },
      "defaultConfiguration": "production"
    }
  }
}

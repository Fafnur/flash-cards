{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flashcards/auth/common": ["libs/auth/common/src/index.ts"],
      "@flashcards/auth/services": ["libs/auth/services/src/index.ts"],
      "@flashcards/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@flashcards/backend/cards": ["libs/backend/cards/src/index.ts"],
      "@flashcards/backend/core": ["libs/backend/core/src/index.ts"],
      "@flashcards/backend/groups": ["libs/backend/groups/src/index.ts"],
      "@flashcards/backend/users": ["libs/backend/users/src/index.ts"],
      "@flashcards/cards/common": ["libs/cards/common/src/index.ts"],
      "@flashcards/core": ["libs/core/src/index.ts"],
      "@flashcards/groups/common": ["libs/groups/common/src/index.ts"],
      "@flashcards/users/common": ["libs/users/common/src/index.ts"],
      "@flashcards/web/errors/not-found/page": ["libs/web/errors/not-found/page/src/index.ts"],
      "@flashcards/web/errors/permission-denied/page": ["libs/web/errors/permission-denied/page/src/index.ts"],
      "@flashcards/web/ui/container": ["libs/web/ui/container/src/index.ts"],
      "@flashcards/web/ui/grid": ["libs/web/ui/grid/src/index.ts"],
      "@flashcards/web/ui/layout": ["libs/web/ui/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
